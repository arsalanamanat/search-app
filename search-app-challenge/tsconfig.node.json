{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "noEmit": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],   
    "emitDeclarationOnly": true,
    "outDir": "./dist/types" // 
  }
  
}
